<?xml version="1.0" encoding="utf-8"?>
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cvcontacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:layout_margin="8dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tvshare"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toEndOf="@+id/ivContact"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="AbinsinguzaDal2" />

            <TextView
                android:id="@+id/tvqualification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abinsinguza Dallen"
                app:layout_constraintStart_toEndOf="@+id/ivContact"
                app:layout_constraintTop_toBottomOf="@+id/tvName" />

            <TextView
                android:id="@+id/tvHospital"
                android:layout_width="208dp"
                android:layout_height="21dp"
                android:layout_marginTop="8dp"
                android:text="News! Uganda celebrates it Heros day...let's celebrate together"
                app:layout_constraintStart_toEndOf="@+id/ivContact"
                app:layout_constraintTop_toBottomOf="@+id/tvqualification" />

            <ImageView
                android:id="@+id/ivContact"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/dentist2" />

            <Button
                android:id="@+id/btnbook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Book Appointment"
                app:layout_constraintStart_toStartOf="@+id/tvHospital"
                app:layout_constraintTop_toBottomOf="@+id/tvHospital" />

        </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>